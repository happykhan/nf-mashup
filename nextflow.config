//Load base config
includeConfig 'config/base.config'

plugins {
  id 'nf-validation@1.1.3'
}

profiles {
    standard {
        docker.runOptions='-u $(id -u):$(id -g) --platform=linux/x86_64'
        docker.enabled = true
        process {
            executor = 'local'
            withLabel:'mash' {
                container = 'staphb/mash:latest'
            }
        }   
    }

    bmrc {
        singularity {
            enabled = true
            runOptions = '--bind /well --bind /gpfs3 --no-home'
        }
        process {
            cpus = 1
            memory = '2G'
            executor = 'slurm'
            queue = 'short,long'
            clusterOptions='-A aanensen.prj'
            penv = 'shmem'
            errorStrategy = { task.attempt <= 5 ? "retry" : "finish" }
            maxRetries = 5

            withLabel:'mash' {
                container = '/well/aanensen/shared/singularity/nf-phylotyping/mash_latest.sif'
            }
      
        }
        tower {
            enabled = false
        }
    }
}
